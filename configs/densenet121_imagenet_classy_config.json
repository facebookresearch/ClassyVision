{
    "name": "classification_task",
    "num_epochs": 90,
    "loss": {
        "name": "CrossEntropyLoss"
    },
    "dataset": {
        "train": {
            "name": "imagenet",
            "split": "train",
            "batchsize_per_replica": 32,
            "num_samples": null,
            "use_shuffle": true
        },
        "test": {
            "name": "imagenet",
            "split": "val",
            "batchsize_per_replica": 32,
            "num_samples": null,
            "use_shuffle": false
        }
    },
    "meters": {
        "accuracy": {
            "topk": [1, 5]
        }
    },
    "model": {
        "name": "densenet",
        "num_blocks": [6, 12, 24, 16],
        "num_classes": 1000,
        "small_input": false
    },
    "optimizer": {
        "name": "sgd",
        "lr": {
            "name": "step",
            "values": [0.1, 0.01, 0.001]
        },
        "weight_decay": 1e-4,
        "momentum": 0.9
    }
}
